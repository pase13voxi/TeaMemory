<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="coolpharaoh.tee.speicher.tea.timer">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true">
        <activity
            android:name=".views.main.Main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.newtea.NewTea"
            android:label="Create/Edit tea"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.main.Main" />
        </activity>
        <activity
            android:name=".views.showtea.ShowTea"
            android:label="Information"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.main.Main" />
        </activity>
        <activity
            android:name=".views.settings.Settings"
            android:label="Settings"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.main.Main" />
        </activity>
        <activity
            android:name=".views.exportimport.ExportImport"
            android:label="ExportImport"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.main.Main" />
        </activity>
        <activity
            android:name=".views.about.About"
            android:label="About"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.main.Main" />
        </activity>
        <activity
            android:name=".views.contact.Contact"
            android:label="Contact"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.about.About" />
        </activity>
        <activity
            android:name=".views.statistics.Statistics"
            android:label="Statistics"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.about.About" />
        </activity>
        <activity
            android:name=".views.software.Software"
            android:label="Software"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.views.about.About" />
        </activity>

        <receiver android:name=".views.showtea.countdowntimer.TeaCompleteReceiver" />
        <service android:name=".views.showtea.countdowntimer.NotificationService" />
    </application>

</manifest>