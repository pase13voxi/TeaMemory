<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="informationRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:transformPivotX">20dp</item>
        <item name="android:transformPivotY">20dp</item>
        <item name="android:scaleX">.8</item>
        <item name="android:scaleY">.8</item>
    </style>

    <style name="informationCardview">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="informationLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="informationHeading">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>