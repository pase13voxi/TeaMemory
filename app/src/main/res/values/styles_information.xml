<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="informationCardview">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="informationLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="informationHeading">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="informationRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:transformPivotX">20dp</item>
        <item name="android:transformPivotY">20dp</item>
        <item name="android:scaleX">.8</item>
        <item name="android:scaleY">.8</item>
    </style>

    <style name="informationEditTextTheme">
        <item name="colorControlNormal">@color/lightgrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="informationEditTextStyle">
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:theme">@style/informationEditTextTheme</item>
    </style>

    <style name="informationCounterLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="informationCounterTextViewHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="informationCounterTextViewCouting">
        <item name="android:textColor">@color/textAppearanceGrey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="informationCounterSeparation">
        <item name="android:background">@color/lightgrey</item>
    </style>
</resources>