<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="information_card_view_style">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="information_image_view_style">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/background</item>
        <item name="android:minHeight">160dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="information_text_view_tea_name">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="information_text_view_variety">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="information_floating_button_image">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:src">@drawable/camera_white</item>
    </style>

    <style name="information_linear_layout_style">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="information_text_view_heading_style">
        <item name="android:textColor">@color/text_green</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="information_rating_bar_style">
        <item name="colorControlNormal">@color/background_green</item>
        <item name="colorControlActivated">@color/background_green</item>
        <item name="android:transformPivotX">20dp</item>
        <item name="android:transformPivotY">20dp</item>
        <item name="android:scaleX">.8</item>
        <item name="android:scaleY">.8</item>
    </style>

    <style name="information_edit_text_theme">
        <item name="colorControlNormal">@color/background_grey</item>
        <item name="colorControlActivated">@color/background_green</item>
    </style>

    <style name="information_edit_text_style">
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:theme">@style/information_edit_text_theme</item>
    </style>

    <style name="linear_layout_information_counter_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="information_text_view_last_usage_style">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="information_text_view_counter_header_style">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="information_text_view_counter_counting_style">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="information_view_counter_separation">
        <item name="android:background">@color/background_grey</item>
    </style>

    <style name="information_checkbox_in_stock">
        <item name="android:padding">10dp</item>
    </style>
</resources>