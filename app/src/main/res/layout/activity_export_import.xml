<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ExportImport">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <TextView
        android:id="@+id/textViewImportExportInfo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="While using the Import and Export you can transfer your teas to a different device."
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/textViewImportExportProcedure"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Procedure:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textViewImportExportInfo"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"/>

    <ImageView
        android:id="@+id/imageView1BulletPoint"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/bulletpoint"
        android:contentDescription="@string/languages_content_description_bulletpoint"
        android:layout_below="@+id/textViewImportExportProcedure"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textViewStep1Text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Export your Tealist as a Jsonfile called tealist.json"
        android:layout_below="@+id/textViewImportExportProcedure"
        android:layout_toEndOf="@id/imageView1BulletPoint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"/>


    <ImageView
        android:id="@+id/imageView2BulletPoint"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/bulletpoint"
        android:contentDescription="@string/languages_content_description_bulletpoint"
        android:layout_below="@+id/textViewStep1Text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textViewStep2Text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Transfer the file to the other device."
        android:layout_below="@+id/textViewStep1Text"
        android:layout_toEndOf="@id/imageView2BulletPoint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"/>


    <ImageView
        android:id="@+id/imageView3BulletPoint"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/bulletpoint"
        android:contentDescription="@string/languages_content_description_bulletpoint"
        android:layout_below="@+id/textViewStep2Text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textViewStep3Text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Import the file into the Application on the other device."
        android:layout_below="@+id/textViewStep2Text"
        android:layout_toEndOf="@id/imageView3BulletPoint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"/>

    <Button
        android:id="@+id/buttonExport"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Export"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/button_start"
        android:layout_below="@id/textViewStep3Text"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/buttonImport"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Import"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/button_start"
        android:layout_below="@id/buttonExport"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

</RelativeLayout>