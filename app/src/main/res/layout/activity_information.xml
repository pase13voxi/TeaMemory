<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/information_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.information.Information">

    <include
        android:id="@id/tool_bar"
        layout="@layout/tool_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                style="@style/informationCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/informationLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/informationHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/information_details_rating" />

                    <RatingBar
                        android:id="@+id/information_rating_bar"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:max="5"
                        android:stepSize="1"
                        android:theme="@style/informationRatingBarStyle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/informationCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/informationLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true">

                    <TextView
                        style="@style/informationHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/information_details_heading" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" />

                    <ImageButton
                        android:id="@+id/buttonAddDetail"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/information_add_detail_button_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/informationCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/informationLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/informationHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/information_notes_heading" />

                    <EditText
                        android:id="@+id/editTextNotes"
                        style="@style/informationEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/information_notes_hint"
                        android:importantForAutofill="no"
                        android:theme="@style/informationEditTextTheme" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/informationCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/informationLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/informationHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/information_counter_heading" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            style="@style/informationCounterLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/informationCounterTextViewHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/information_counter_today" />

                            <TextView
                                android:id="@+id/textViewInformationCounterToday"
                                style="@style/informationCounterTextViewCouting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <View
                            style="@style/informationCounterSeparation"
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            style="@style/informationCounterLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/informationCounterTextViewHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/information_counter_week" />

                            <TextView
                                android:id="@+id/textViewInformationCounterWeek"
                                style="@style/informationCounterTextViewCouting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/informationCounterSeparation"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            style="@style/informationCounterLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/informationCounterTextViewHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/information_counter_month" />

                            <TextView
                                android:id="@+id/textViewInformationCounterMonth"
                                style="@style/informationCounterTextViewCouting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <View
                            style="@style/informationCounterSeparation"
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            style="@style/informationCounterLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/informationCounterTextViewHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/information_counter_overall" />

                            <TextView
                                android:id="@+id/textViewInformationCounterOverall"
                                style="@style/informationCounterTextViewCouting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>