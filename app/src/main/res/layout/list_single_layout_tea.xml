<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_recycler_view_image"
        style="@style/overview_tea_list_card_view"
        android:layout_margin="10dp"
        app:cardCornerRadius="250dp">

        <ImageView
            android:id="@+id/image_view_recycler_view_image"
            style="@style/overview_tea_list_image_view_image"
            android:contentDescription="@string/overview_image_description_image" />

        <TextView
            android:id="@+id/text_view_recycler_view_image"
            style="@style/overview_tea_list_text_view_image" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        style="@style/overview_tea_list_linear_layout"
        android:layout_toStartOf="@id/button_overview_in_stock"
        android:layout_toEndOf="@id/card_view_recycler_view_image">

        <TextView
            android:id="@+id/text_view_recycler_view_heading"
            style="@style/overview_tea_list_text_view_tea"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/text_view_recycler_view_description"
            style="@style/overview_tea_list_text_view_tea"
            android:textColor="@color/text_grey" />

    </LinearLayout>

    <ImageView
        android:id="@+id/button_overview_in_stock"
        style="@style/overview_tea_list_image_view_in_stock"
        android:contentDescription="@string/overview_image_description_in_stock" />
</RelativeLayout>