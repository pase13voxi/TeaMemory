<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="4dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/toolbar_title"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:id="@+id/toolbar_text_infusionindex"
            android:text="@string/showtea_first_infusion_index"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"/>

        <Button
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:id="@+id/toolbar_infusionindex"
            android:background="@drawable/button_infusionindex"
            android:layout_gravity="end"
            android:layout_marginEnd="5dip"/>

        <Button
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:id="@+id/toolbar_nextinfusion"
            android:background="@drawable/button_nextinfusion"
            android:layout_gravity="end"
            android:layout_marginEnd="5dip"/>
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>