<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <NumberPicker
            android:id="@+id/new_tea_number_picker_dialog_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:theme="@style/number_picker_theme_overlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_temperature_picker_unit"
            style="@style/new_tea_number_picker_temperature_unit"
            android:layout_marginStart="10dp"
            android:text="@string/new_tea_dialog_temperature_celsius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/new_tea_number_picker_dialog_temperature"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/new_tea_layout_custom_variety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp">

        <TextView
            style="@style/new_tea_dialog_text_view_suggestions"
            android:text="@string/new_tea_dialog_picker_suggestion" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <Button
                android:id="@+id/new_tea_button_picker_suggestion_1"
                style="@style/new_tea_dialog_input_button_suggestions" />

            <Button
                android:id="@+id/new_tea_button_picker_suggestion_2"
                style="@style/new_tea_dialog_input_button_suggestions" />

            <Button
                android:id="@+id/new_tea_button_picker_suggestion_3"
                style="@style/new_tea_dialog_input_button_suggestions" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>