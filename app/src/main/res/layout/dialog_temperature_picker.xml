<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <NumberPicker
            android:id="@+id/number_picker_dialog_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/numberPickerThemeOverlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/numberPickerText"
            android:id="@+id/textView_temperature_picker_unit"
            android:layout_marginStart="10dp"
            android:text="@string/newtea_dialog_temperature_celsius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_picker_dialog_temperature"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_picker_suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newtea_dialog_picker_suggestion"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <Button
                style="@style/dialogInputButtonSuggestions"
                android:id="@+id/button_picker_suggestion_1" />

            <Button
                style="@style/dialogInputButtonSuggestions"
                android:id="@+id/button_picker_suggestion_2" />

            <Button
                style="@style/dialogInputButtonSuggestions"
                android:id="@+id/button_picker_suggestion_3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>