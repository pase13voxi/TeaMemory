<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coolpharaoh.tee.speicher.tea.timer.views.newtea.NewTea">

    <include
        android:id="@id/tool_bar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTeaVariety"
                android:text="@string/newtea_tea_variety"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/spinnerTeaVariety"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:textColor="@color/grey" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTeaVariety"
                android:transitionName="Teeart"
                android:entries="@array/variety_teas"
                android:prompt="@string/newtea_tea_variety"
                android:spinnerMode="dialog"
                android:layout_toEndOf="@+id/textViewTeaVariety"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                style="@android:style/Widget.Holo.Light.Spinner" />

            <CheckBox
                android:theme="@style/CheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxSelfInput"
                android:text="@string/newtea_by_hand"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignBottom="@id/spinnerTeaVariety"
                android:layout_toEndOf="@id/spinnerTeaVariety"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"
                android:visibility="invisible"/>

            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="@string/newtea_tea_variety"
                android:importantForAutofill="no"
                android:ems="10"
                android:id="@+id/editTextSelfInput"
                android:textSize="25sp"
                android:layout_alignBottom="@id/spinnerTeaVariety"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@id/spinnerTeaVariety"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewChooseColor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25sp"
                android:text="@string/newtea_color_label"
                android:layout_below="@id/spinnerTeaVariety"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/grey" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/buttonColor"
                android:background="@drawable/button_color"
                android:layout_below="@id/spinnerTeaVariety"
                android:layout_toEndOf="@id/textViewChooseColor"
                android:layout_marginTop="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="4dp"
                style="?android:attr/borderlessButtonStyle" />

            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="@string/newtea_hint_name"
                android:importantForAutofill="no"
                android:ems="10"
                android:id="@+id/editTextName"
                android:layout_below="@id/buttonColor"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="25sp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/spinnerAmountUnit"
                android:spinnerMode="dropdown"
                android:entries="@array/newtea_amount"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_below="@id/editTextName"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/newtea_hint_ts_other"
                android:importantForAutofill="no"
                android:ems="10"
                android:id="@+id/editTextAmount"
                android:layout_below="@+id/editTextName"
                android:layout_marginTop="30dp"
                android:layout_marginStart="4dp"
                android:textSize="25sp"
                android:layout_toStartOf="@id/spinnerAmountUnit"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonAddInfusion"
                android:background="@drawable/button_add"
                android:layout_below="@id/editTextAmount"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonDeleteInfusion"
                android:background="@drawable/button_delete"
                android:layout_below="@id/editTextAmount"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@id/buttonAddInfusion"
                android:layout_alignWithParentIfMissing="true"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/linearLayoutInfusions"
                android:layout_below="@id/editTextAmount"
                android:layout_marginTop="30dp"
                android:layout_toStartOf="@id/buttonDeleteInfusion">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonArrowLeft"
                    android:background="@drawable/button_arrowleft"
                    android:enabled="false"
                    android:layout_marginStart="4dp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCountInfusion"
                    android:text="@string/newtea_count_infusion_first"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="25sp"
                    android:textColor="@color/grey"
                    android:layout_centerInParent="true"/>

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonArrowRight"
                    android:background="@drawable/button_arrowright"
                    android:enabled="false"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonShowCoolDownTime"
                android:background="@drawable/button_arrowdown"
                android:layout_below="@+id/linearLayoutInfusions"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/newtea_hint_celsius_other"
                android:importantForAutofill="no"
                android:ems="10"
                android:id="@+id/editTextTemperature"
                android:layout_below="@+id/linearLayoutInfusions"
                android:layout_marginTop="30dp"
                android:layout_marginStart="4dp"
                android:textSize="25sp"
                android:layout_toStartOf="@+id/buttonShowCoolDownTime"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonAutofillCoolDownTime"
                android:background="@drawable/button_arrowright"
                android:layout_below="@+id/editTextTemperature"
                android:layout_marginTop="40dp"
                android:layout_marginStart="4dp"
                android:layout_alignParentStart="true"
                android:visibility="gone"/>

            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="@string/newtea_hint_cooldowntime"
                android:importantForAutofill="no"
                android:ems="10"
                android:id="@+id/editTextCoolDownTime"
                android:layout_below="@+id/editTextTemperature"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="20dp"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/buttonAutofillCoolDownTime"
                android:visibility="gone"/>

            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:hint="@string/newtea_hint_time_other"
                android:importantForAutofill="no"
                android:ems="10"
                android:id="@+id/editTextTime"
                android:layout_below="@+id/editTextCoolDownTime"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="25sp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
