<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showtea_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="coolpharaoh.tee.speicher.tea.timer.views.showtea.ShowTea">

    <include
        android:id="@id/tool_bar"
        layout="@layout/tool_bar_show_tea" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/textViewVariety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <Spinner
        android:id="@+id/spinnerMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dip"
        android:layout_toStartOf="@+id/textViewDoublePoint" />

    <Spinner
        android:id="@+id/spinnerSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dip"
        android:layout_toEndOf="@+id/textViewDoublePoint" />

    <TextView
        android:id="@+id/textViewDoublePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dip"
        android:background="#ffffff"
        android:text="@string/showtea_double_point"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <ImageButton
        android:id="@+id/buttonTemperature"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/spinnerSeconds"
        android:layout_marginBottom="130dip"
        android:layout_toStartOf="@+id/textViewTemperature"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/showtea_tooltip_temperature"
        android:scaleType="fitXY"
        android:src="@drawable/temperature" />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:layout_above="@id/spinnerSeconds"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dip"
        android:layout_marginBottom="140dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/buttonCalculateAmount"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/spinnerSeconds"
        android:layout_alignStart="@+id/buttonTemperature"
        android:layout_marginBottom="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/showtea_tooltip_calculateamount"
        android:scaleType="fitXY"
        android:src="@drawable/spoon" />

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/spinnerSeconds"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/buttonCalculateAmount"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonStartTimer"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/spinnerMinutes"
        android:layout_alignEnd="@+id/spinnerSeconds"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dip"
        android:background="@drawable/button_round_dark"
        android:text="@string/showtea_timer_start"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dip"
        android:layout_marginBottom="170dip"
        android:layout_toEndOf="@id/buttonStartTimer"
        android:background="@drawable/button_info"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonStartTimer"
        android:layout_alignStart="@id/spinnerMinutes"
        android:layout_marginBottom="65dip"
        android:layout_toStartOf="@+id/textViewDoublePoint"
        android:text="@string/showtea_display_min"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonStartTimer"
        android:layout_marginBottom="65dip"
        android:layout_toEndOf="@+id/textViewDoublePoint"
        android:text="@string/showtea_display_sec"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dip"
        android:background="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="65sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewSteam"
        android:layout_width="230dip"
        android:layout_height="130dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dip"
        android:contentDescription="@string/showtea_content_description_steam"
        android:src="@drawable/cup_steam"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewCup"
        android:layout_width="230dip"
        android:layout_height="230dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        android:contentDescription="@string/showtea_content_description_cup"
        android:src="@drawable/cup"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewFill"
        android:layout_width="230dip"
        android:layout_height="230dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        android:contentDescription="@string/showtea_content_description_filling"
        android:src="@drawable/cup_fill0pr"
        android:visibility="invisible" />

</RelativeLayout>
