<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showtea_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="coolpharaoh.tee.speicher.tea.timer.views.ShowTea">

    <include
        android:id="@id/tool_bar"
        layout="@layout/tool_bar_show_tea" />


    <ToggleButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonNotification"
        android:background="@drawable/button_notification"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_below="@id/tool_bar"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

    <ToggleButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonVibration"
        android:background="@drawable/button_vibration"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_below="@id/tool_bar"
        android:layout_toStartOf="@+id/buttonNotification"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="55sp"
        android:maxLines="2"
        android:id="@+id/textViewShowName"
        android:layout_below="@id/tool_bar"
        android:layout_marginTop="50dip"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="40sp"
        android:id="@+id/textViewShowTeesorte"
        android:layout_below="@+id/textViewShowName"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMinutes"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dip"
        android:layout_toStartOf="@+id/textViewDoppelPunkt"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSeconds"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dip"
        android:layout_toEndOf="@+id/textViewDoppelPunkt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/showtea_double_point"
        android:textSize="50sp"
        android:id="@+id/textViewDoppelPunkt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dip"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/buttonNote"
        android:background="@drawable/button_note"
        android:layout_above="@id/spinnerSeconds"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="200dip"
        android:layout_marginEnd="50dip"
        android:visibility="invisible"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonExchange"
        android:background="@drawable/button_temperatureexchange"
        android:layout_above="@id/spinnerSeconds"
        android:layout_marginBottom="130dip"
        android:layout_toStartOf="@+id/textViewShowTemperatur"
        android:enabled="false"/>

    <TextView
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:id="@+id/textViewShowTemperatur"
        android:layout_above="@id/spinnerSeconds"
        android:layout_marginBottom="140dip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dip" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonCalculateAmount"
        android:background="@drawable/button_calculateamount"
        android:layout_above="@id/spinnerSeconds"
        android:layout_marginBottom="40dp"
        android:layout_alignStart="@+id/buttonExchange" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:id="@+id/textViewShowTeelamass"
        android:layout_above="@id/spinnerSeconds"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/buttonCalculateAmount" />

    <Button
       style="?android:attr/buttonStyleSmall"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/showtea_timer_start"
        android:textColor="@color/white"
       android:textSize="40sp"
       android:id="@+id/buttonStartTimer"
       android:background="@drawable/button_start"
       android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="80dip"
       android:layout_alignStart="@id/spinnerMinutes"
       android:layout_alignEnd="@+id/spinnerSeconds"/>

    <Button
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:id="@+id/buttonInfo"
        android:visibility="invisible"
        android:background="@drawable/button_info"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/buttonStartTimer"
        android:layout_marginBottom="170dip"
        android:layout_marginStart="10dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/showtea_display_min"
        android:id="@+id/textViewMin"
        android:layout_above="@id/buttonStartTimer"
        android:layout_marginBottom="65dip"
        android:layout_toStartOf="@+id/textViewDoppelPunkt"
        android:layout_alignStart="@id/spinnerMinutes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/showtea_display_sec"
        android:id="@+id/textViewSec"
        android:layout_above="@id/buttonStartTimer"
        android:layout_marginBottom="65dip"
        android:layout_toEndOf="@+id/textViewDoppelPunkt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="65sp"
        android:id="@+id/textViewTimer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dip"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageViewSteam"
        android:layout_width="230dip"
        android:layout_height="130dip"
        android:src="@drawable/steam"
        android:contentDescription="@string/showtea_content_description_steam"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dip"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageViewCup"
        android:layout_width="230dip"
        android:layout_height="230dip"
        android:src="@drawable/cup_new"
        android:contentDescription="@string/showtea_content_description_cup"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/imageViewFill"
        android:layout_width="230dip"
        android:layout_height="230dip"
        android:src="@drawable/fill0pr"
        android:contentDescription="@string/showtea_content_description_filling"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        android:visibility="invisible"/>

</RelativeLayout>
